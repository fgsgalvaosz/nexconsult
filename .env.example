# NEXCONSULT - CNPJ CONSULTOR API
# ================================
# Copie para .env e ajuste conforme necessário

# Server Configuration
PORT=3000                    # Porta do servidor
PREFORK=false               # Prefork para produção
READ_TIMEOUT=30             # Timeout de leitura (segundos)
WRITE_TIMEOUT=30            # Timeout de escrita (segundos)
IDLE_TIMEOUT=120            # Timeout de idle (segundos)

# Logging Configuration
LOG_LEVEL=info              # debug, info, warn, error, fatal
LOG_FORMAT=console          # console ou json
LOG_OUTPUT=stdout           # stdout, stderr, file

# Worker Pool Configuration
WORKERS_COUNT=5             # Número de workers
MAX_CONCURRENT=10           # Jobs concorrentes por worker
WORKER_TIMEOUT=300          # Timeout de processamento (segundos)

# Browser Configuration
BROWSER_PAGE_TIMEOUT=30     # Timeout da página (segundos)
BROWSER_NAV_TIMEOUT=30      # Timeout de navegação (segundos)
BROWSER_ELEMENT_TIMEOUT=15  # Timeout de elementos (segundos)
BROWSER_MAX_IDLE_MINUTES=30 # Tempo máximo idle (minutos)

# Captcha Configuration (OBRIGATÓRIO)
SOLVECAPTCHA_API_KEY=sua_api_key_aqui  # API Key do SolveCaptcha
CAPTCHA_TIMEOUT=300                    # Timeout captcha (segundos)
CAPTCHA_MAX_RETRIES=3                  # Máximo de tentativas

# Rate Limiting (Controle de Consultas Simultâneas)
RATE_LIMIT_RPM=10           # Requests por minuto por IP (10 = mais conservador)
RATE_LIMIT_BURST=2          # Requisições em burst permitidas
MAX_QUEUE_SIZE=1000         # Máximo de jobs na fila de processamento
RATE_CLEANUP_INTERVAL=5     # Intervalo de limpeza dos limiters (minutos)
